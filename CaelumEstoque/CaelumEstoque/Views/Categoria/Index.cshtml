    <div>
        <table class="table table-hover">
            <thead>
                <tr>                    
                    <th>Nome</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <tr>                        
                        <td>@categoria.Nome</td>
                        <td>@categoria.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

